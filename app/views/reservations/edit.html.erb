<div class="page-header">
  <h1>Create Reservation for <%= @reservation.day %> at <%= @reservation.time %> </h1>
<h6>If you have 5 people or more in your reservation, please call us at 1.900.GUD.FOOD</h6>
</div>

<form action="/bookings/create">
  <div class="form-group">
    <label>How many people are in your party:</label>

  </div>

  <div class="form-group">
    <select name="party_size">
      <option value="1">1 person</option>
      <option value="2">2 people</option>
      <option value="3">3 people</option>
      <option value="4">4 people</option>
    </select>

  <input name="user_id" value=<%= session[:user_id] %> type="hidden">
  <input name="reservation_id" value=<%= @reservation.id %> type="hidden">

 </div>
  <button type="submit" class="btn btn-success btn-md">Submit</button>
  </div>
<p></p>



